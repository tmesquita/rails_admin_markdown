= form.text_area field.method_name, field.html_attributes.reverse_merge(data: { richtext: false, options: {}.to_json }).reverse_merge({ value: field.form_value, class: 'form-control', required: field.required })

= stylesheet_link_tag    'simple_mde/simplemde.min'
= javascript_include_tag 'simple_mde/simplemde.min'

:javascript
  var simplemde = new SimpleMDE({
        renderingConfig: { singleLineBreaks: false },
        element: document.getElementById("#{form.object_name}_#{field.method_name}"),
        toolbar: [
          "bold",
          "italic",
          "strikethrough",
          "|",
          "heading",
          "heading-smaller",
          "heading-bigger",
          "|",
          "code",
          "quote",
          "unordered-list",
          "ordered-list",
          "|",
          "link",
          "|",
          "preview"
        ],
        placeholder: "Styling with Markdown is supported",
        spellChecker: false,
        status: false
      });
